---
import 'reveal.js/dist/reveal.css';
import 'reveal.js/dist/theme/black.css';
---

<div class="reveal">
  <div class="slides">
    <slot />
  </div>
</div>

<script>
  import Reveal from 'reveal.js';

  document.addEventListener('DOMContentLoaded', () => {
    const deck = new Reveal({
      transition: 'slide',
    });
    deck.initialize();
  });
</script>
